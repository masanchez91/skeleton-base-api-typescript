{
  "name": "skeleton-base-api-typescript",
  "version": "0.1.0",
  "description": "Base template to create rest api with nodejs and typescript.",
  "main": "build/app.js",
  "scripts": {
    "start": "nodemon build/app.js",
    "dev": "nodemon \"src/app.ts\" --exec \"ts-node\" \"src/app.ts\" -e ts,json,ejs",
    "build": "tsc",
    "dev:lint": "nodemon -e ts,json,ejs --exec \"npm run lint\"",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "test": "jest --verbose"
  },
  "author": "Mauro SÃ¡nchez",
  "license": "MIT",
  "devDependencies": {
    "@types/express": "^4.17.13",
    "@types/jest": "^27.4.0",
    "@types/supertest": "^2.0.11",
    "@typescript-eslint/eslint-plugin": "^5.9.0",
    "@typescript-eslint/parser": "^5.9.0",
    "eslint": "^8.6.0",
    "eslint-plugin-jest": "^25.3.4",
    "http": "^0.0.1-security",
    "jest": "^27.4.7",
    "nodemon": "^2.0.15",
    "supertest": "^6.1.6",
    "ts-jest": "^27.1.2",
    "ts-node": "^10.4.0",
    "typescript": "^4.5.4"
  },
  "dependencies": {
    "express": "^4.17.2"
  }
}
